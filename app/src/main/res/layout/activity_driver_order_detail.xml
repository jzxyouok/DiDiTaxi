<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.cuit.diditaxi.activity.DriverOrderDetailActivity">

    <!--<com.amap.api.maps.MapView-->
        <!--android:id="@+id/map_view_driver_order_detail"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white_01"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_driver_order_detail_start"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="2dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_start"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray_01"/>

        <TextView
            android:id="@+id/tv_driver_order_detail_destination"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_list_item"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_end"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/orange_01"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray_01"/>

        <Button
            android:id="@+id/btn_driver_confirm_order"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_btn_passenger_main"
            android:text="接单"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:enabled="false"/>
    </LinearLayout>
</FrameLayout>
